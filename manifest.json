{
  "manifest_version": 2,
  "name": "PirateSpeak",
  "version": "0.1",
  "description": "Translate your webpages from English to PirateSpeak!",
  "browser_action": {
    "default_icon": {
	 "19": "icon.png",
	 "128": "icon_128.png"
	},
    "popup": "pirates/pirates.html",
    "background-page": "pirates/background.js"
  },
  "content_scripts": [{
      "matches": ["http://*.co.il/*"],
      "js": ["pirates/pirates.js", "lib/jquery.js"],
      "run_at": "document_end"
    }]
}
