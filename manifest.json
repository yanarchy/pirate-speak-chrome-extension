{
  "manifest_version": 2,
  "name": "PirateSpeak",
  "version": "0.1",
  "description": "Translate your webpages from English to PirateSpeak!",
  "browser_action": {
    "default_icon": {
	 "19": "icon.png",
	 "128": "icon_128.png"
	},
    "popup": "pirates/pirates.html",
    "background-page": "pirates/background.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ['<all_urls>'],
      "css": ["pirates/pirates.css"],
      "js": ["pirates/pirates.js"]
    }
  ],

}
